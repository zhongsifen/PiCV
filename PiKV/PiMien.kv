# File name: PiMien.kv
#:kivy 1.7.0
<PiMien>:
    # width:  1920
    # height: 1080
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        RelativeLayout:
            size_hint: None,None
            width:  root.width
            # height: root.height - _bar.height
            height: root.height - _menubar.height - _statusbar.height
            Camera:
                id: _camera
                resolution: (640,480)
                play: True
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            id: _bar
            orientation: 'vertical'
            BoxLayout:
                id: _menubar
                size_hint: 1,None
                height: 48
                orientation: 'horizontal'
                padding: 2
                Button:
                    text: 'Start'
                    on_press: _camera.play = True
                Button:
                    text: 'Stop'
                    on_press: _camera.play = False
                Button:
                    text: 'Capture'
                Button:
                    text: 'Setup'
                Button:
                    text: 'Exit'
                    on_press: app.stop()
            BoxLayout:
                id: _statusbar
                size_hint: 1,None
                height: 24
                orientation: 'horizontal'
                Label:
                    text: 'Total: 1'
                Label:
                    text: "Started"